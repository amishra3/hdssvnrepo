<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search Box"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}450"
    width="{Long}800">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout jcr:primaryType="nt:unstructured"/>
        <items jcr:primaryType="nt:unstructured">
            <search
                jcr:primaryType="nt:unstructured"
                jcr:title="Banner 1"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <sbboxtext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Search Box text"
                                name="./jcr:sbboxtext"
                                required="{Boolean}true"/>
                            <sbimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                allowUpload="false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                disabled="{Boolean}true"
                                fieldLabel="Searcb Button Icon Image"
                                fileNameParameter="./fileName1"
                                fileReferenceParameter="./jcr:sbimage"
                                height="{Long}0"
                                id="imagesb"
                                mimeTypes="[image]"
                                multiple="{Boolean}true"
                                name="./sbimage"
                                required="{Boolean}true"
                                text="Select Image"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <sbclearbutton
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Clear Search button label"
                                name="./jcr:sbclearbutton"
                                required="{Boolean}true"/>
                            <sbloadmorebutton
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Load more button display count"
                                name="./jcr:sbloadmorebutton"/>
                        </items>
                    </column>
                </items>
            </search>
        </items>
    </content>
</jcr:root>
