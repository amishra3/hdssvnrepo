<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <columntitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Content Title"
                        name="./columntitle"
                        xtype="textfield"/>
                    <columncontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Content"
                        name="./columncontent"
                        xtype="textarea"/>
                    <hiderightborder
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hide Right Vertical Border ?"
                        name="./hiderightborder"
                        type="checkbox"
                        xtype="selection"/>                        
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
