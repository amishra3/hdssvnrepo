<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <sectiontitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Content Section Title"
                        name="./sectiontitle"
                        xtype="textfield"/>
                    <sectionsubtext
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Content Section Sub Text"
                        name="./sectionsubtext"
                        xtype="textfield"/>
                    <downloadspectargeturl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spec Download Target URL"
                        name="./downloadspectargeturl"
                        xtype="pathfield"/>
                    <downloadspeclinklabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Label For Spec Download Link"
                        name="./downloadspeclinklabel"
                        xtype="textfield"/>
                    <downloadspeclinkopeninnew
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window ?"
                        name="./downloadspeclinkopeninnew"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
