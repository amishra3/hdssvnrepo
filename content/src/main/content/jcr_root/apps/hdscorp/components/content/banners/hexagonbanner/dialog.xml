<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hextitlecontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hero Title Content"
                        name="./hextitlecontent"
                        xtype="textfield"/>
                    <hexsubtitlecontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hero Sub Title Content"
                        name="./hexsubtitlecontent"
                        xtype="textfield"/>
                    <hexcontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hero Content"
                        name="./hexcontent"
                        xtype="textarea">
                        <rtePlugins
                            jcr:primaryType="nt:unstructured"
                            path="/apps/hdscorp/components/content/richtext/tab_editor/items/editor/rtePlugins.infinity.json"
                            xtype="cqinclude"/>
                    </hexcontent>
                    <heximagePath
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        allowUpload="false"
                        cropParameter="./heximageCrop2"
                        ddGroups="[media]"
                        fieldLabel="Banner Image"
                        fileNameParameter="./heximagefileName2"
                        fileReferenceParameter="./heximagePath"
                        height="{Long}200"
                        name="./heximagePath"
                        rotateParameter="./heximagePathimageRotate2"
                        sizeLimit="100"
                        title="Image"
                        width="{Long}200"
                        xtype="html5smartimage"/>
                    <multilinks
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./hexmultilinks"
                        fieldLabel="Tabs"
                        name="./hexmultilinks"
                        xtype="custommultifield">
                        <fieldConfig jcr:primaryType="cq:WidgetCollection">
                            <placardTitle
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Placard Title"
                                name="./placardTitle"
                                xtype="textfield"/>
                            <placardcontent
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Placard Content"
                                name="./placardcontent"
                                xtype="richtext">
                                <rtePlugins
                                    jcr:primaryType="nt:unstructured"
                                    path="/apps/hdscorp/components/content/richtext/tab_editor/items/editor/rtePlugins.infinity.json"
                                    xtype="cqinclude"/>
                            </placardcontent>
                            <placardIconPath
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Placard Icon Path"
                                name="./placardIconPath"
                                xtype="pathfield"/>
                            <placardIconalt
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Placard Icon Alt"
                                name="./placardIconalt"
                                xtype="textfield"/>
                        </fieldConfig>
                    </multilinks>
                    <hexbuttonlabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Label"
                        name="./hexbuttonlabel"
                        xtype="textfield"/>
                    <hexbuttonurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Target URL"
                        name="./hexbuttonurl"
                        xtype="pathfield"/>
                    <hexurltargettype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window ?"
                        name="./hexurltargettype"
                        type="checkbox"
                        xtype="selection"/>
                    <hexshowadditionsymbol
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Show Addition Icons ?"
                        name="./hexshowadditionsymbol"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
