<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Footer Social Connect">
                <items jcr:primaryType="cq:WidgetCollection">
                    <socialtitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./socialtitle"
                        xtype="textfield"/>
                    <socialmultilinks
                        jcr:primaryType="cq:Widget"
                        customMultiFieldName="./socialmultilinks"
                        fieldLabel="Social Links"
                        name="./socialmultilinks"
                        xtype="custommultifield">
                        <fieldConfig jcr:primaryType="cq:WidgetCollection">
                            <linktargeturl
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Target URL"
                                name="./linktargeturl"
                                xtype="pathfield"/>
                            <linkIconPath
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Link Icon Path"
                                name="./linkIconPath"
                                xtype="pathfield"/>
                            <linkIconText
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Image Alt Text"
                                name="./linkicontext"
                                xtype="textfield"/>
                        </fieldConfig>
                    </socialmultilinks>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
