<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <quoteheadline
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Quote Headline"
                        name="./quoteheadline"
                        xtype="textfield"/>
                    <quotecontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Quote Content"
                        name="./quotecontent"
                        xtype="textarea"/>
                    <quotebackgroundimage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Background Image Path"
                        name="./quotebackgroundimage"
                        xtype="pathfield"/>
                    <quotebackgroundmobileimage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner Mobile Image (Optional)"
                        name="./quotebackgroundmobileimage"
                        xtype="ddpathfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
