<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <abouthdsbannertitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hero Title Content"
                        name="./abouthdsbannertitle"
                        xtype="textfield"/>
                    <abouthdsbannersubtitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hero Sub Title Content"
                        name="./abouthdsbannersubtitle"
                        xtype="textfield"/>
                    <abouthdsbannercontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner Content"
                        name="./abouthdsbannercontent"
                        xtype="textarea">
                    </abouthdsbannercontent>
                    <abouthdsbannermagePath
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        allowUpload="false"
                        cropParameter="./abouthdsbannermageCrop2"
                        ddGroups="[media]"
                        fieldLabel="Banner Image"
                        fileNameParameter="./abouthdsbannermagefileName2"
                        fileReferenceParameter="./abouthdsbannermagePath"
                        height="{Long}200"
                        name="./abouthdsbannermagePath"
                        rotateParameter="./abouthdsbannerimageRotate2"
                        sizeLimit="100"
                        title="Image"
                        width="{Long}200"
                        xtype="html5smartimage"/>
                    <abouthdsbannerbuttonlabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Label"
                        name="./abouthdsbannerbuttonlabel"
                        xtype="textfield"/>
                    <abouthdsbannerbuttonurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Target URL"
                        name="./abouthdsbannerbuttonurl"
                        xtype="pathfield"/>
                    <abouthdsbannerurltargettype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window ?"
                        name="./abouthdsbannerurltargettype"
                        type="checkbox"
                        xtype="selection"/>
                    <abouthdsbannercontentalign
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Left Align Content?"
                        name="./abouthdsbannercontentalign"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
