<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Panel"
    title="HDS Corp">
    <items jcr:primaryType="cq:WidgetCollection">
        <navigation
            jcr:primaryType="cq:Widget"
            fieldLabel="Navigation DropDown Path"
            name="./navpath"
            xtype="pathfield"/>
        <personalizationenabled
            jcr:primaryType="cq:Widget"
            fieldLabel="Include Personalization Scripts?"
            inputValue="true"
            name="./personalizationEnabled"
            type="checkbox"
            xtype="selection"/>
        <hidebreadcrumb
            jcr:primaryType="cq:Widget"
            fieldLabel="Hide Breadcrumb ?"
            name="./hidebreadcrumb"
            type="checkbox"
            xtype="selection"/>
        <hidereturntotop
            jcr:primaryType="cq:Widget"
            fieldLabel="Hide Return to Top Functionality For The Page ?"
            name="./hidereturntotop"
            type="checkbox"
            xtype="selection"/>
        <pagesubtext
            jcr:primaryType="cq:Widget"
            fieldLabel="Enter page blurb"
            fieldDescription="This'll be used to show product overview, when pulled into product listing pages."
            name="./subtext"
            height="200"
            xtype="richtext"/>     
        <errorpages
		    jcr:primaryType="cq:Widget"
		    path="/apps/acs-commons/components/utilities/errorpagehandler/dialog/errorpages.infinity.json"
		    xtype="cqinclude"/>
		<viewallprlabel
            jcr:primaryType="cq:Widget"
            fieldLabel="View Alll Press Releases label"
            name="./viewallprlabel"
            xtype="textfield"/> 
        <viewallprlink
             jcr:primaryType="cq:Widget"
             fieldLabel="View All Press Releases Link"
             name="./viewallprlink"
             xtype="pathfield"/>
        <hideinsitemap
            jcr:primaryType="cq:Widget"
            fieldLabel="Hide in  Sitemap"
            name="./hideinsitemap"
            type="checkbox"
            xtype="selection"/> 
          <displaydescendants
                   jcr:primaryType="cq:Widget"
                   fieldLabel="Display descendants in Sitemap"
                   name="./displaydescendants"                
                   type="select"
				                   xtype="selection">
					    <options jcr:primaryType="cq:WidgetCollection">
					        <one
					            jcr:primaryType="nt:unstructured"
					            text="Yes"
					            value="yes"/>
					        <two
					            jcr:primaryType="nt:unstructured"
					            text="No"
					            value="no"/>   
					    </options>
            </displaydescendants>   
                                
    </items>
</jcr:root>
