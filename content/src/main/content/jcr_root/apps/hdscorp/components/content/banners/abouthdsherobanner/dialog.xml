<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <abouthdsherobannertitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hero Title Content"
                        name="./abouthdsherobannertitle"
                        xtype="textfield"/>
                    <abouthdsherobannercontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner Content"
                        name="./abouthdsherobannercontent"
                        xtype="textarea"/>
                    <abouthdsherobannermage
                        jcr:primaryType="cq:Widget"
                        allowUpload="false"
                        ddGroups="[media]"
                        fieldLabel="Banner Image"
                        fileNameParameter="./imagePath3/fileName2"
                        fileReferenceParameter="./jcr:imageFileRef"
                        height="{Long}200"
                        name="./abouthdsherobannermage"
                        sizeLimit="100"
                        title="Image"
                        width="{Long}200"
                        xtype="html5smartimage"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
