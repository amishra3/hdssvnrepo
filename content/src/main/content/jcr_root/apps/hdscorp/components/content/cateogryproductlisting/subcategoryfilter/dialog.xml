<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}650"
    title="Sub Categories"
    width="{Long}800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Sub Categories">
                <items jcr:primaryType="cq:WidgetCollection">
                    <multifield_navigator
                        jcr:primaryType="cq:Widget"                       
                        fieldDescription="Click the '+' to add a new subcategory."
                        fieldLabel="Sub Categories"
                        name="./subcategories"
                        xtype="custommultifield">
                        <fieldConfig jcr:primaryType="cq:WidgetCollection">
                            <subcatdisplaylabel
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Sub Cateogry Label"
                                name="./subcatdisplaylabel"
                                xtype="textfield"/>
                            <subcatcontenturl
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Path to the Sub Cateogry Content"
                                name="./subcatcontenturl"
                                xtype="pathfield"/>
                            <subcatid
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Sub Cateogry ID"
                                name="./subcatid"
                                xtype="textfield"/>                                
                        </fieldConfig>
                    </multifield_navigator>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
