<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <quotecontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Quote Content"
                        name="./quotecontent"
                        xtype="textarea"/>
                    <quoteauthor
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Quote Author"
                        name="./quoteauthor"
                        xtype="textfield"/>
                    <quoteheroimage
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        allowUpload="false"
                        cropParameter="./quoteheroimagePath/imageCrop2"
                        ddGroups="[media]"
                        fieldLabel="Quote Hero Image"
                        fileNameParameter="./quoteheroimage/fileName"
                        fileReferenceParameter="./quoteheroimage"
                        height="{Long}200"
                        name="./quoteheroimage"
                        rotateParameter="./quoteheroimage/imageRotate"
                        sizeLimit="100"
                        title="Quote Hero Image"
                        width="{Long}200"
                        xtype="html5smartimage"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
