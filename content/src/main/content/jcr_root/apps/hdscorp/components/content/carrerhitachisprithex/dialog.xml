<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <chstitle
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Title"
                        name="./jcr:chstitle"
                        xtype="textfield"/>
                    <chsdescription
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Description"
                        name="./jcr:chsdescription"
                        xtype="textarea"/>
                    <chsbackgroundimage
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Backgroung Image"
                        name="./jcr:chsbackgroundimage"
                        xtype="pathfield"/>
                    <hexagondata
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spirit Hexagon"
                        name="./jcr:hexagondata"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            border="true"
                            hideLabel="true"
                            layout="form"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <chsheadline
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}false"
                                    anchor="100%"
                                    dname="header"
                                    fieldLabel="Head Line"
                                    key="headline"
                                    layout="anchor"
                                    name="./headline"
                                    xtype="textfield"/>
                                <chshexagondescription
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}false"
                                    anchor="100%"
                                    fieldLabel="Description"
                                    key="chshexagondescription"
                                    name="./chshexagondescription"
                                    xtype="richtext"/>
                            </items>
                        </fieldConfig>
                    </hexagondata>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
