<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="600"
    title="News Vertical Explore Container"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <insightcontainer
                jcr:primaryType="cq:Panel"
                title="Tab">
                <items
                    jcr:primaryType="cq:WidgetCollection"
                    xtype="multifieldpanel">
                    <newsbackgroundimage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Background Image  Path"
                        name="./newsbackgroundimage"
                        xtype="pathfield"/>
                    <numberofnewsrows
                        jcr:primaryType="cq:Widget"
                        fieldLabel="No. Of Rows"
                        name="./numberofnewsrows"
                        xtype="textfield"/>
                    <nevcmultifield
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Add Section"
                        name="./nevcmultifield"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <nevcsectionlabel
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}false"
                                    fieldLabel="Section Label"
                                    key="nevcsectionlabel"
                                    name="./nevcsectionlabel"
                                    xtype="textfield"/>
                                <nevcsectionlink
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}false"
                                    fieldLabel="Section Link"
                                    key="nevcsectionlink"
                                    name="./nevcsectionlink"
                                    xtype="pathfield"/>
                                <nevcopeninnewwindow
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Open in New Window"
                                    key="nevcopeninnewwindow"
                                    name="./nevcopeninnewwindow"
                                    type="select"
                                    width="300"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <opt1
                                            jcr:primaryType="nt:unstructured"
                                            text="YES"
                                            value="1"/>
                                        <opt2
                                            jcr:primaryType="nt:unstructured"
                                            text="NO"
                                            value="2"/>
                                    </options>
                                </nevcopeninnewwindow>
                            </items>
                        </fieldConfig>
                    </nevcmultifield>
                </items>
            </insightcontainer>
        </items>
    </items>
</jcr:root>
