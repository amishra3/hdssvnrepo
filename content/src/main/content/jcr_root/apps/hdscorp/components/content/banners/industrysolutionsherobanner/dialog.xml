<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <industrysolutionsherobannertopheading
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Top Banner Heading"
                        name="./industrysolutionsherobannertopheading"
                        xtype="textfield"/>
                    <industrysolutionsherobannerheadline
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner Headline"
                        name="./industrysolutionsherobannerheadline"
                        xtype="textfield"/>
                    <industrysolutionsherobannersubheadline
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner Sub Headline"
                        name="./industrysolutionsherobannersubheadline"
                        xtype="richtext">
                        <rtePlugins
                            jcr:primaryType="nt:unstructured"
                            path="/apps/hdscorp/components/content/richtext/tab_editor/items/editor/rtePlugins.infinity.json"
                            xtype="cqinclude"/>
                    </industrysolutionsherobannersubheadline>
                    <industrysolutionsherobannerimage
                        jcr:primaryType="cq:Widget"
                        allowUpload="false"
                        ddGroups="[media]"
                        fieldLabel="Banner Image"
                        fileNameParameter="./imagePath3/fileName2"
                        fileReferenceParameter="./jcr:imageFileRef"
                        height="{Long}200"
                        name="./industrysolutionsherobannerimage"
                        sizeLimit="100"
                        title="Image"
                        width="{Long}200"
                        xtype="html5smartimage"/>
                    <mobileimagePath
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner Mobile Image (Optional)"
                        name="./industrysolutionsherobannermobileimage"
                        xtype="ddpathfield"/>
                    <industrysolutionsherobannerlabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Label"
                        name="./industrysolutionsherobannerlabel"
                        xtype="textfield"/>
                    <industrysolutionsherobannerbuttonurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Target URL"
                        name="./industrysolutionsherobannerbuttonurl"
                        xtype="pathfield"/>
                    <industrysolutionsherobannerurltargettype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window ?"
                        name="./industrysolutionsherobannerurltargettype"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
