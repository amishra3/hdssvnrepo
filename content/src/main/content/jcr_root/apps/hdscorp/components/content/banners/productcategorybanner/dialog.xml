<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <categorytitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Category Title"
                        name="./categorytitle"
                        xtype="textfield"/>
                    <categoryiconpath
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Category Icon Path"
                        name="./categoryiconpath"
                        xtype="ddpathfield"/>
                    <simplebannertitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hero Title Content"
                        name="./simplebannertitle"
                        xtype="textfield"/>
                    <simplebannersubtitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Hero Sub Title Content"
                        name="./simplebannersubtitle"
                        xtype="textfield"/>
                    <simplebannercontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner Content"
                        name="./simplebannercontent"
                        xtype="textarea">
                        <rtePlugins
                            jcr:primaryType="nt:unstructured"
                            path="/apps/hdscorp/components/content/richtext/tab_editor/items/editor/rtePlugins.infinity.json"
                            xtype="cqinclude"/>
                    </simplebannercontent>
                    <simplebannermagePath
                        jcr:primaryType="cq:Widget"
                        allowUpload="false"
                        cropParameter="0"
                        ddGroups="[media]"
                        fieldLabel="Banner Image"
                        fileNameParameter="./imagePath3/fileName2"
                        fileReferenceParameter="./simplebannermagePath"
                        height="{Long}200"
                        name="./simplebannermage"
                        rotateParameter="0"
                        sizeLimit="100"
                        title="Image"
                        width="{Long}200"
                        xtype="html5smartimage"/>
                    <simplebannermobileimagePath
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Banner Mobile Image (Optional)"
                        name="./simplebannermobileimagePath"
                        xtype="ddpathfield"/>
                    <simpllebannerbuttonlabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Label"
                        name="./simpllebannerbuttonlabel"
                        xtype="textfield"/>
                    <simplebannerbuttonurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Target URL"
                        name="./simplebannerbuttonurl"
                        xtype="pathfield"/>
                    <simplebannerurltargettype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window ?"
                        name="./simplebannerurltargettype"
                        type="checkbox"
                        xtype="selection"/>
                    <thirdparty
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Show third party icon?"
                        key="thirdparty"
                        name="./thirdparty"
                        type="checkbox"
                        xtype="selection"/>
                    <contentalign
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Align Content on Right?"
                        name="./contentalign"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
