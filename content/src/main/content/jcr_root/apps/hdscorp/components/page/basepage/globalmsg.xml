<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Panel"
    title="Global Messages">
    <items jcr:primaryType="cq:WidgetCollection">
         <prodAnalyticsScriptPath
           jcr:primaryType="cq:Widget"
           fieldLabel="PRODUCTION DTM (Analytics) Script Path"
           fieldDescription="Ex - //assets.adobedtm.com/e171f6759c6c455550c5f666e64e8a56fe657d2f/satelliteLib-7f2faccf998d3a358edac4d790c59020820ff755.js"
           name="./prodAnalyticsScriptPath"
           xtype="textarea"/>
         <stgAnalyticsScriptPath
           jcr:primaryType="cq:Widget"
           fieldLabel="STAGING DTM (Analytics) Script Path"
           fieldDescription="Ex - //assets.adobedtm.com/e171f6759c6c455550c5f666e64e8a56fe657d2f/satelliteLib-7f2faccf998d3a358edac4d790c59020820ff755.js"
           name="./stgAnalyticsScriptPath"
           xtype="textarea"/>
        <analyticsinfooter
            jcr:primaryType="cq:Widget"
            fieldLabel="Include analytics scripts in footer (instead of header) ?"
            name="./analyticsinfooter"
            type="checkbox"
            xtype="selection"/>
         <clientlibanalytics
           jcr:primaryType="cq:Widget"
           fieldLabel="Analytics Clientlib Category"
           fieldDescription="Please provide the ANALYTICS clientlib category for the project. Defaults to 'hdscorp.analytics'"
           name="./clientlibanalytics"
           xtype="textfield"/>            
        <hidetitlemetatag
            jcr:primaryType="cq:Widget"
            fieldLabel="Do not write title meta tag ?"
            name="./hidetitlemetatag"
            type="checkbox"
            xtype="selection"/>                       
        <domain
            jcr:primaryType="cq:Widget"
            fieldLabel="Link Domain Value"
            name="./domain"
            xtype="textfield"/>
        <titleprefix
            jcr:primaryType="cq:Widget"
            fieldLabel="Title Meta Data Prefix Value"
            name="./titleprefix"
            xtype="textfield"/>
        <returntotoplabel
            jcr:primaryType="cq:Widget"
            fieldLabel="Return to Top Label"
            name="./returntotoplabel"
            xtype="textfield"/>
        <footerlinksmsg
            jcr:primaryType="cq:Widget"
            fieldLabel="Footer Links Message"
            name="./footerlinksmsg"
            xtype="textfield"/>
        <joincommunitymsg
            jcr:primaryType="cq:Widget"
            fieldLabel="Join Community Message"
            name="./joincommunitymsg"
            xtype="textfield"/>
        <insertnocacheheaders
            jcr:primaryType="cq:Widget"
            fieldLabel="Make this page non-cacheable ?"
            name="./insertnocacheheaders"
            type="checkbox"
            xtype="selection"/>
        <categridsortorder
            jcr:primaryType="cq:Widget"
            fieldLabel="Priority Number for the item in the grid."
            name="./gridpriorityorder"
            xtype="textfield"/>
         <videooverlaymarkup
            jcr:primaryType="cq:Widget"
            fieldLabel="Video Overlay Mark Up"
            fieldDescription="Ex - &lt;object class=BrightcoveExperience id=#videoGuid&gt;..&lt;/object&gt;"
            name="./videooverlaymarkup"
            xtype="textarea"/> 
         <homeherovideomarkup
            jcr:primaryType="cq:Widget"
            fieldLabel="Home Hero Video Mark Up"
            fieldDescription="Ex - &lt;object class=BrightcoveExperience id=#videoGuid&gt;..&lt;/object&gt;"
            name="./homeherovideomarkup"
            xtype="textarea"/>    
		<btitle
            jcr:primaryType="cq:Widget"
            fieldLabel="Product Banner Marketo Form Label"
            name="./btitle"
            xtype="textfield"/>
		<simplebannerbuttonurl
            jcr:primaryType="cq:Widget"
            fieldLabel="Marketo Form URL"
            name="./simplebannerbuttonurl"
            xtype="pathfield"/>
