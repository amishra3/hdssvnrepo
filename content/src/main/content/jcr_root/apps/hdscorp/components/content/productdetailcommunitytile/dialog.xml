<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="300"
    title="dialog"
    width="500"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <blog
                jcr:primaryType="cq:Panel"
                title="Blog">
                <items jcr:primaryType="cq:WidgetCollection">
                    <bimagepath
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Blog Image Path"
                        name="./bimagepath"
                        xtype="pathfield"/>
                    <bautherdetails
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Blog Author  Details"
                        name="./bautherdetails"
                        xtype="textfield"/>
                    <btitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Blog Title"
                        name="./btitle"
                        xtype="textfield"/>
                    <bcontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Blog Content"
                        name="./bcontent"
                        xtype="richtext"/>
                    <breadmore
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Blog Read More Label"
                        name="./breadmore"
                        xtype="textfield"/>
                    <breadmorelink
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Blog Read More Link"
                        name="./breadmorelink"
                        xtype="pathfield"/>
                    <bopeninnew
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in new window?"
                        name="./bopeninnew"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </blog>
        </items>
    </items>
</jcr:root>
