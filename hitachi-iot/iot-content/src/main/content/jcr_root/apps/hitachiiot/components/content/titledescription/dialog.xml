<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <iconurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Icon URL"
                        name="./iconurl"
                        xtype="ddpathfield"/>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description"
                        height="125"
                        name="./description"
                        xtype="richtext">
                        <rtePlugins
                            jcr:primaryType="nt:unstructured"
                            path="/apps/hdscorp/components/content/richtext/tab_editor/items/editor/rtePlugins.infinity.json"
                            xtype="cqinclude"/>
                    </description>
                    <readmorelabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Read More Label"
                        name="./readmorelabel"
                        xtype="textfield"/>
                    <readmorelink
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Read More Link"
                        name="./readmorelink"
                        xtype="ddpathfield"/>
                    <readmorelinktargettype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window ?"
                        name="./readmorelinktargettype"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
