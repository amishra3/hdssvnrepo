<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <headlinecontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Headline Content"
                        name="./headlinecontent"
                        xtype="textfield"/>
                    <descriptioncontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Description Content"
                        height="125"
                        name="./descriptioncontent"
                        xtype="richtext">
                        <rtePlugins
                            jcr:primaryType="nt:unstructured"
                            path="/apps/hdscorp/components/content/richtext/tab_editor/items/editor/rtePlugins.infinity.json"
                            xtype="cqinclude"/>
                    </descriptioncontent>
                    <infographicimage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Provide Infographic Image"
                        name="./infographicimage"
                        xtype="pathfield"/>
                    <infographicmobileimage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Infographic Mobile Image (Optional)"
                        name="./infographicmobileimage"
                        xtype="ddpathfield"/>
                    <infographicpathurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Infographic Icon Path URL"
                        name="./infographicpathurl"
                        xtype="pathfield"/>
                    <buttonlabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Label"
                        name="./buttonlabel"
                        xtype="textfield"/>
                    <buttontargettype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window?"
                        name="./buttontargettype"
                        type="checkbox"
                        xtype="selection"/>
                    <buttonurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Button Path URL"
                        name="./buttonurl"
                        xtype="pathfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
