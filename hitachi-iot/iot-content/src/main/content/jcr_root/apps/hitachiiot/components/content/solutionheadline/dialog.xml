<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <solutiontitlecontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Solution Title Content"
                        name="./solutiontitlecontent"
                        xtype="textfield"/>
                    <solutionsubtitlecontent
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Solution Sub Title Content"
                        height="125"
                        name="./solutionsubtitlecontent"
                        xtype="richtext">
                        <rtePlugins
                            jcr:primaryType="nt:unstructured"
                            path="/apps/hdscorp/components/content/richtext/tab_editor/items/editor/rtePlugins.infinity.json"
                            xtype="cqinclude"/>
                    </solutionsubtitlecontent>
                    <backgroundimage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Provide Background Image"
                        name="./backgroundimage"
                        xtype="ddpathfield"/>
                    <backgroundmobileimage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Background Mobile Image (Optional)"
                        name="./backgroundmobileimage"
                        xtype="ddpathfield"/>
                    <videoId
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Video Id"
                        name="./videoId"
                        xtype="textfield"/>
                    <videopathurl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Video Icon Path URL"
                        name="./videopathurl"
                        xtype="pathfield"/>
                    <videourltargettype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Open in New Window?"
                        name="./videourltargettype"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
